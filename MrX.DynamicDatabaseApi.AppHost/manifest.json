{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "SQL": {
      "type": "container.v0",
      "connectionString": "Server={SQL.bindings.tcp.host};Port={SQL.bindings.tcp.port};User ID=root;Password={SQL-password.value}",
      "image": "docker.io/library/mysql:9.0",
      "volumes": [
        {
          "name": "SQL",
          "target": "/var/lib/mysql",
          "readOnly": false
        }
      ],
      "env": {
        "MYSQL_ROOT_PASSWORD": "{SQL-password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 3306
        }
      }
    },
    "DB": {
      "type": "value.v0",
      "connectionString": "{SQL.connectionString};Database=DB"
    },
    "SEQ": {
      "type": "container.v0",
      "connectionString": "{SEQ.bindings.http.url}",
      "image": "docker.io/datalust/seq:2024.3",
      "volumes": [
        {
          "name": "SEQ",
          "target": "/data",
          "readOnly": false
        }
      ],
      "env": {
        "ACCEPT_EULA": "Y"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 80
        }
      }
    },
    "mrx-dynamicdatabaseapi-api": {
      "type": "project.v0",
      "path": "../MrX.DynamicDatabaseApi.Api/MrX.DynamicDatabaseApi.Api.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{mrx-dynamicdatabaseapi-api.bindings.http.targetPort}",
        "ConnectionStrings__DB": "{DB.connectionString}",
        "ConnectionStrings__SEQ": "{SEQ.connectionString}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "port": 80,
          "external": true
        }
      }
    },
    "SQL-password": {
      "type": "parameter.v0",
      "value": "{SQL-password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22
            }
          }
        }
      }
    }
  }
}